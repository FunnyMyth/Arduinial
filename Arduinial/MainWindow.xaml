<Window x:Class="Arduinial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arduinial"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="759*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Button_ReadSearial" Content="Read" Grid.Column="1" HorizontalAlignment="Left" Margin="315,35,0,0" VerticalAlignment="Top" Click="Button_ReadSearial_Click"/>
        <ComboBox x:Name="ComboBox_Ports" Grid.Column="1" HorizontalAlignment="Left" Margin="175,34,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="Label_PickPort" Content="Select COM Port:" Grid.Column="1" HorizontalAlignment="Left" Margin="71,32,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="TextBlock_ReadSerial" Grid.Column="1" HorizontalAlignment="Left" Margin="175,107,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Height="202" Width="328"/>
    </Grid>
</Window>
